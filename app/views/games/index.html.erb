<h1>List of Games</h1>
<% @games.each do |game| %>
  <p><%= link_to game.name, game_path(game) %><span><%= link_to game_path(game) , method: :delete, data: { confirm: "Do you want to delete this game from the list?" } do %>
    <i class="fas fa-trash-alt"></i></span>
      <% end %>
    <% end %>
  </p>
<p><%= link_to "Add a new game", new_game_path %></p>
