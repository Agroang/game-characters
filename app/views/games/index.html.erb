<div class="container mt-2 col-xs-1 align-center">
  <h1 class="text-center justify-content-between">List of Games</h1>
</div>


<div class="container">
  <div class="cards">
    <% @games.each do |game| %>
      <div class="card-product">
          <%= cl_image_tag game.photo.key, crop: :fill %>
          <div class="card-product-infos">
            <p><%= link_to game.name, game_path(game) %><span><%= link_to game_path(game) , method: :delete, data: { confirm: "Do you want to delete this game from the list?" } do %>
            <i class="fas fa-times-circle"></i></span>
            <% end %>
            </p>
            <p><%= game.release_date %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-2 d-flex justify-content-center">
  <p class="centered-par"><%= link_to "Add a new game", new_game_path %><p>
</div>
