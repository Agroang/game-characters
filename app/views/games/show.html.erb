<h1><%= @game.name %></h1>
<h3>List of Characters:</h3>
<% @game.characters.each do |character| %>
  <p><%= character.name %><span><%= link_to character_path(character) , method: :delete, data: { confirm: "Do you want to delete this Character from the game?" } do %>
      <i class="fas fa-trash-alt"></i></span>
        <% end %>
  <span><%= link_to "Add a skill", new_character_gain_path(character) %></span>
  </p>
  <div>
  <%= cl_image_tag character.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <% character.skills.each do |skill| %>
    <p><%= skill.name %>
    <% end %>
    <% character.gains.each do |gain| %>
    <% gain.id %><span><%= link_to gain_path(gain.id) , method: :delete, data: { confirm: "Do you want to delete this Skill from this character?" } do %>
      <i class="fas fa-trash-alt"></i></span>
      <% end %>
    <% end %>
  </p>
<% end %>
