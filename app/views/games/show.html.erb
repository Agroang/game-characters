<div class="container mt-2 col-xs-1 align-center">
  <h1 class="text-center justify-content-between"><%= @game.name %></h1>
</div>

<div class="container mt-2 col-xs-1 align-center">
  <h3 class="text-center justify-content-between">List of Characters:</h3>
</div>

<div class="container">
  <div class="cards">
    <% @game.characters.each do |character| %>
      <div class="card-product">
        <%= cl_image_tag character.photo.key, crop: :fill %>
          <div class="card-product-infos">
            <p><%= character.name %><span><%= link_to character_path(character) , method: :delete, data: { confirm: "Do you want to delete this Character from the game?" } do %>
              <i class="fas fa-times-circle"></i></span>
              <% end %>
            </p>
            <span><%= link_to "Add a skill", new_character_gain_path(character) %></span>
          </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="container">
  <div class="cards">
    <% @game.characters.each do |character| %>
      <div class="card-product">
        <div class="card-product-infos">
          <p><%= character.name %> current skills:</p>
          <% character.skills.each do |skill| %>
            <p><%= skill.name %>
          <% end %>
          <% character.gains.each do |gain| %>
            <% gain.id %><span><%= link_to gain_path(gain.id) , method: :delete, data: { confirm: "Do you want to delete #{gain.skill.name} from this character?" } do %>
              <i class="fas fa-times-circle"></i></span>
            <% end %>
          <% end %>
            </p>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="container mt-2 d-flex justify-content-between">
  <p class="centered-par"><%= link_to "Add a character", new_game_character_path(@game) %></p>
  <p class="centered-par"><%= link_to "Edit game", edit_game_path(@game) %></p>
  <p class="centered-par"><%= link_to "Back to games", games_path %></p>
</div>
